myorigin = <%= @myorigin %>
myhostname = <%= @myhostname %>
smtpd_banner = <%= @smtpd_banner %>
biff = <%= @biff %>
append_dot_mydomain = <%= @append_dot_mydomain %>
readme_directory = <%= @readme_directory %>
