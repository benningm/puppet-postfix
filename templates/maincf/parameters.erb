smtpd_tls_session_cache_database = <%= @smtpd_tls_session_cache_database %>
smtp_tls_session_cache_database = <%= @smtp_tls_session_cache_database %>

alias_maps = <%= @alias_maps.join(' ') %>
alias_database = <%= @alias_database.join(' ') %>

smtpd_relay_restrictions = <%= @smtpd_relay_restrictions.join(' ') %>
mydestination = <%= @mydestination.join(', ') %>
